<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- ICON -->
    <link rel="shortcut icon" href="/img/pearlmedic.png" />
    <!-- End ICON -->
    <!-- CSS -->
    <link rel="stylesheet" href="/css/general.css" />
    <link rel="stylesheet" href="/css/login.css" />
    <link rel="stylesheet" href="/css/loginfooter.css" />
    <link rel="stylesheet" href="/css/validation.css" />
    <!-- END ICON -->
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- End Font Awesome -->
    <title><%= title %></title>
  </head>
  <body>
    <section class="login_section">
      <div class="login_header">
        <div class="login-left">
          <img src="/img/pearlmedic.png" alt="PearlMedic Logo" class="login_header_img" />
          <h1 class="login_title"><i class="fa-solid fa-door-open"></i><span>Login</span> <%= subtitle %></h1>
        </div>
        <div class="login-right">
          <div class="login-option-title" id="login-option-title">
            <h3>Login <%= subtitle %> <i class="fa-solid fa-caret-down"></i></h3>
          </div>
          <div class="login-suboption" id="none">
            <a href="/login_client" class="login-option">Client</a>
            <a href="/login_admin" class="login-option">Staff Administrasi</a>
            <a href="/login_dokter" class="login-option">Staff Kesehatan</a>
            <a href="/login_KepalaAdmin" class="login-option">Kepala Administrasi</a>
          </div>
        </div>
      </div>
      <div class="container"><%- body %></div>
      <%- include('Login-footer-layout') %>
    </section>
  </body>
</html>

<script>
  const loginOptionTitle = document.getElementById("login-option-title");
  const loginSubOption = document.getElementById("none");

  // if login option title clicked remove none id
  loginOptionTitle.addEventListener("click", () => {
    if (loginSubOption.id === "none") {
      loginSubOption.id = "";
    } else {
      loginSubOption.id = "none";
    }
  });
</script>
