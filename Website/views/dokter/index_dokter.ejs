<div class="pelayanan_admin_section">
  <div class="pelayanan_dashboard_wrapper">
    <div class="PAdmin_left">
      <div class="Padmin_title">
        <h1>Dashboard<span> Staff Kesehatan</span></h1>
      </div>
      <div class="Padmin_pelayananmasuk">
        <div class="Padmin_pelayananmasuk_title">
          <h2>Pelayanan Masuk Terbaru</h2>
        </div>
        <!-- <div class="Padmin_pelayananmasuk_search">
          <input type="text" id="searchInput" placeholder="Masukan nama perusahaan untuk mencari pelayanan . . ." />
          <button id="searchButton"><i class="fa-solid fa-search"></i></button>
        </div> -->
        <div class="Padmin_pelayananmasuk_table">
          <table>
            <thead>
              <tr>
                <th>No</th>
                <th>Nama Perusahaan</th>
                <th>Nomor Pesanan</th>
                <th>Jenis Pelayanan</th>
                <th>Tanggal Pelayanan</th>
                <th>Status</th>
                <!-- <th>Rekam Medis</th> -->
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% if (layanan && layanan.length > 0) { %> <% layanan.forEach((item, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= item.nama_perusahaan %></td>
                <td><%= item.nomorpesanan %></td>
                <td><%= item.jenis_pelayanan %></td>
                <td><% if (item.tanggal_pelayanan) { %> <%= new Date(item.tanggal_pelayanan).toLocaleDateString('en-GB', { year: 'numeric', month: '2-digit', day: '2-digit' }) %> <% } else { %> N/A <% } %></td>
                <td id="yellow"><%= item.status == 2 ? "Dalam Proses" : "Lainnya" %></td>
                <!-- <td id="reds">0 / 100</td> -->
                <td>
                  <% if (item.jenis_pelayanan === "Medical Check Up") { %>
                  <a href="/LMedical_dokter_detail/<%= item.id %>">Detail</a>
                  <% } else if (item.jenis_pelayanan === "Darurat") { %>
                  <a href="/LDarurat_dokter_detail/<%= item.id %>">Detail</a>
                  <% } else if (item.jenis_pelayanan === "Vaksinasi") { %>
                  <a href="/LVaksin_dokter_detail/<%= item.id %>">Detail</a>
                  <% } else { %>
                  <a href="/LPelayananDetailMedical_dokter/<%= item.id %>">Detail</a>
                  <% } %>
                </td>
              </tr>
              <% }); %> <% } else { %>
              <tr>
                <td colspan="7">No records found</td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .pelayanan_dashboard_wrapper {
    display: grid;
    grid-template-columns: 1fr;
    padding: 20px;
  }
</style>
