<!-- detailStafAdmin.ejs -->

<div class="pelayanan_admin_section">
  <div class="pelayanan_dashboard_wrapper">
    <div class="PAdmin_left">
      <div class="Padmin_title">
        <h1>Detail Akun <span>Staff Administrasi</span></h1>
      </div>
      <div class="Padmin_pelayananmasuk">
        <div class="Padmin_pelayananmasuk_wrapper">
          <div class="Padmin_pelayananmasuk_pic">
            <img src="/img/<%= akunStafAdmin.photo_stafadmin%>" alt="" />
          </div>
          <div class="Padmin_pelayananmasuk_data">
            <div class="Padmin_pelayananmasuk_datamenu">
              <h3>Nama Lengkap</h3>
              <p><i class="fa-solid fa-user-tie"></i><%= akunStafAdmin.namalengkap_stafadmin %></p>
            </div>
            <div class="Padmin_pelayananmasuk_datamenu">
              <h3>Username</h3>
              <p><i class="fa-solid fa-user"></i><%= akunStafAdmin.username_stafadmin %></p>
            </div>
            <div class="Padmin_pelayananmasuk_datamenu">
              <h3>Email</h3>
              <p><i class="fa-solid fa-envelope"></i><%= akunStafAdmin.email_stafadmin %></p>
            </div>
            <div class="Padmin_pelayananmasuk_datamenu">
              <h3>Nomor Telepon</h3>
              <p><i class="fa-solid fa-square-phone"></i><%= akunStafAdmin.nomortelepon_stafadmin %></p>
            </div>
            <div class="Padmin_pelayananmasuk_datamenu">
              <h3>Nomor Induk</h3>
              <p><i class="fa-solid fa-user"></i><%= akunStafAdmin.noinduk_stafadmin %></p>
            </div>
            <div class="Padmin_pelayananmasuk_datamenu">
              <h3>Jabatan</h3>
              <p><i class="fa-solid fa-user-tie"></i><%= akunStafAdmin.jabatan_stafadmin %></p>
            </div>
            <div class="Padmin_pelayananmasuk_datamenu">
              <h3>Status</h3>
              <p id="<%= akunStafAdmin.status_stafadmin === 1 ? 'greens' : 'red' %>" class="status-pelayanan"><%= akunStafAdmin.status_stafadmin === 1 ? 'Akun Aktif' : 'Tidak Aktif' %></p>
            </div>
          </div>
          <br />
          <br />
          <br />
          <div class="edit-all-button">
            <div class="edit-menu-button">
              <a href="/editDetailAkun/<%= akunStafAdmin.id_stafadmin %>">Edit Profil</a>
              <a href="/gantiPassDetailAkun/<%= akunStafAdmin.id_stafadmin %>" style="background-color: var(--red-color)">Ganti Password</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="PAdmin_right"></div>
  </div>
</div>
