<script>
    function confirmDelete(id) {
        if (confirm("Apakah Anda yakin ingin membatalkan pesanan?")) {
            // Kirim permintaan penghapusan ke server
            fetch(`/deleteDarurat/${id}`, {
                method: 'POST'
            })
            .then(response => response.json()) // Parse JSON response
            .then(data => {
                if (data.message === 'Darurat service deleted successfully') {
                    // Redirect atau tindakan lain setelah penghapusan berhasil
                    window.location.href = '/LDarurat_admin';
                } else {
                    throw new Error(data.message || 'Gagal menghapus pesanan');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert(error.message);
            });
        }
    }
</script>