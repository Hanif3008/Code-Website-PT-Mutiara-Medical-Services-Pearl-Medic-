<div class="pelayanan_admin_section">
  <div class="pelayanan_dashboard_wrapper">
    <div class="PAdmin_left">
      <div class="Padmin_title">
        <h1>Data<span> Rekam Medis</span></h1>
      </div>
      <div class="Padmin_pelayananmasuk">
        <div class="detail-pesanan">
          <div class="detail-pesanan-info">
            <h3>Nama Perusahaan</h3>
            <p>: <%= orderDetails.nama_perusahaan %></p>
          </div>
          <div class="detail-pesanan-info">
            <h3>Nama Proyek</h3>
            <p>: <%= orderDetails.nama_proyek %></p>
          </div>
          <div class="detail-pesanan-info">
            <h3>Nomor Pesanan</h3>
            <p>: <%= orderDetails.nomorpesanan %></p>
          </div>
          <div class="detail-pesanan-info">
            <h3>Jenis Pelayanan</h3>
            <p>: <%= orderDetails.jenis_pelayanan %></p>
          </div>
          <div class="detail-pesanan-info">
            <h3>Tanggal Pelayanan</h3>
            <p>: <%= orderDetails.tanggal_pelayanan %></p>
          </div>
          <div class="detail-pesanan-info">
            <h3>Total Rekam Medis</h3>
            <p>: <%= totalvaksinRecords %> /<%= orderDetails.jumlahpasien_vaksin %></p>
          </div>
        </div>
        <div class="Padmin_pelayananmasuk_search">
          <input type="text" id="searchInput" placeholder="Masukan nama pasien atau nomor rekam medis untuk mencari rekam medis . . ." />
          <button id="searchButton"><i class="fa-solid fa-search"></i></button>
        </div>
        <div class="Padmin_pelayananmasuk_table">
          <table>
            <thead>
              <tr>
                <th>No</th>
                <th>Nomor Rekam Medis</th>
                <th>Nama Pasien</th>
                <th>Jenis Kelamin</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% if (vaksinResults.length > 0) { %> <% vaksinResults.forEach((record, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= record.nomor_rmVaksinasi %></td>
                <td><%= record.nama_lengkap %></td>
                <td><%= record.jenis_kelamin %></td>
                <td>
                  <a href="/DetailrmVaksin_admin/<%= record.nomor_rmVaksinasi %>" class="btn btn-primary">Lihat Detail</a>
                </td>
              </tr>
              <% }); %> <% } else { %>
              <tr>
                <td colspan="5">Tidak ada data rekam medis yang ditemukan.</td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

